<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("_head") %>
  </head>
  <body>
    <%- include("_header") %>

    <div class="container">
      <% if (role === "index") { %>
      <h1 class="nome">Bands</h1>
      <section id="bands">
        <div class="row">
          <% bands.forEach(band => { %>
          <div class="col-3">
            <a href="/band/<%= band.id %>/songs">
              <div class="card">
                <img
                  src="/images/<%= band.image %>"
                  class="card-img-top"
                  alt="..."
                />
                <div class="card-body">
                  <h5 class="card-title"><%= band.name %></h5>
                </div>
              </div>
            </a>
          </div>
          <% }); %>
        </div>
      </section>
      <% } %> <% if (role === "songs") { %>
      <h1 clas="nome">Songs</h1>
      <section id="songs">
        <div class="row">
          <% songs.forEach(song => { %>

          <div class="col-3">
            <div class="card">
              <img
                src="/images/<%= song.image %>"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <a href="/songs/<%=song.id%>" clas="card-title"><%= song.name %></a>
                <h6>Year: <%= song.year %></h6>
                <h6>Duration: <%= song.duration %></h6>
                <h6>Stars: <% for(let i = 0; i < song.stars;~i++){ %>
                  ‚≠ê
                <%}%> </h6>
                

                <div class="row">
                  <div class="col-6">
                    <a
                      href="/like-song/<%= song.id %>"
                      class="btn btn-outline-primary"
                      >Like</a
                    >
                  </div>
                  <div class="col-6 dislike">
                    <!-- Button trigger modal -->
                    <a
                      href="/dislike-song/<%= song.id %>"
                      class="btn btn-outline-primary"
                      >Disike</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>


          <% }); %>
        </div>
      </section>
      <% } %> <% if (role === "detail") { %>
      <section id="detail">
        <img
                src="/images/<%= song.image %>"
                class="img-detail"
                alt="..."
              />
                <h5 class="card-title"><%= song.name %></h5>
                <h6>Year: <%= song.year %></h6>
                <h6>Duration: <%= song.duration %></h6>
                <h6>Star: <%= song.stars %></h6>

                <div class="row">
                  <div class="col-6">
                    <a
                      href="/edit-song/<%= song.id %>"
                      class="btn btn-outline-primary"
                      >Edit</a
                    >
                  </div>
                  <div class="col-6">
                    <!-- Button trigger modal -->
                    <button
                      type="button"
                      class="btn btn-outline-danger"
                      data-bs-toggle="modal"
                      data-bs-target="#exampleModal"
                    >
                      Delete
                    </button>
                  </div>
                </div>

                <!-- Modal -->
          <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                  Do you want to delete this song?
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">You won't be able to undo this action.</div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Cancel
                </button>
                <a
                  href="/delete-song/<%= song.id %>"
                  class="btn btn-outline-danger"
                  >Delete</a
                >
              </div>
            </div>
          </div>
        </div>
                
      </section>
      <% } %>
    </div>
    <footer class="footer">
      <p>
        <a href="https://www.instagram.com/tabernadometal/">@tabernadometal </a>
      </p>
      
    </footer>
  </body>
</html>